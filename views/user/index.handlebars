<h2>Lista de usuários</h2>
<hr>
<a class="btn btn-primary" href="/user/new">Criar novo usuário</a>
 <a href="/" class="btn btn-secondary">Voltar</a>
<hr>
{{#each users}}
<div class="card mt-2">
  <div class="card-body">
    <h4>{{name}}</h4>
    <p>Email: {{email}}</p>
    <p>Criação: {{createdAt}}</p>
    <p>Modificação: {{updatedAt}}</p>
  </div>
</div>
{{else}}
<p>Ainda não existem usuários cadastrados!</p>
{{/each}}
