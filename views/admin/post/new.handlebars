<h3>Nova Postagem</h3>
{{#each errors}}
  <div class="alert alert-danger">{{text}}</div>
{{else}}
{{/each}}
<hr>
<form action="/admin/posts/new" method="POST">
  <div class="form-group">
    <label for="title">Título: </label>
    <input type="text" name="title" class="form-control" value="{{post.title}}" placeholder="Nome da postagem">
  </div>
  <div class="form-group">
    <label for="slug">Slug: </label>
    <input type="text" name="slug" class="form-control" value="{{post.slug}}" placeholder="Slug da postagem">
  </div>
  <div class="form-group">
    <label for="description">Descrição: </label>
    <textarea name="description" class="form-control" value="{{post.description}}" placeholder="Descrição da postagem"></textarea>
  </div>
  <div class="form-group">
    <label for="content">Conteúdo: </label>
    <textarea name="content" class="form-control" value="{{post.content}}" placeholder="Descrição do conteudo"></textarea>
  </div>
  <div class="form-group">
    <label>Categorias</label>
    <select class="form-control" name="category">
      {{#each categories}}
        {{#if selected}}
          <option value="{{_id}}" selected="selected">{{name}}</option>
        {{else}}
          <option value="{{_id}}">{{name}}</option>
        {{/if}}
      {{else}}
        <option value="">Nenhuma categoria selecionada!</option>
      {{/each}}
    </select>
  </div>
  <button type="submit" class="btn btn-success">Criar postagem</button>
  <a href="/admin/posts" class="btn btn-secondary">Voltar</a>
</form>